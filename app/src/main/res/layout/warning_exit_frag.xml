<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/edit_text_frag"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Do you want to exit without saving your changes?"
        android:textSize="18sp"
        android:layout_below="@+id/txt_title_frag"
        android:layout_alignLeft="@+id/txt_title_frag"
        android:layout_alignStart="@+id/txt_title_frag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_cancel_frag"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="CANCEL"
        android:layout_below="@+id/edit_text_frag"
        android:layout_toLeftOf="@+id/btn_confirm_frag"
        android:layout_toStartOf="@+id/btn_confirm_frag" />

    <Button
        android:id="@+id/btn_confirm_frag"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_cancel_frag"
        android:text="CONFIRM" />

    <TextView
        android:id="@+id/txt_title_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:textStyle="bold"
        android:layout_marginStart="26dp"
        android:text="Changes not saved"
        android:textColor="@color/md_black_1000"
        android:textSize="22sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE &amp; EXIT"
        android:id="@+id/btn_save_exit"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_alignTop="@+id/btn_cancel_frag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>